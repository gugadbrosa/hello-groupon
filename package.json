{
  "name": "hello-groupon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:api": "playwright test --project api",
    "test:e2e": "playwright test --project e2e-desktop --project e2e-mobile",
    "test:e2e:desktop": "playwright test --project e2e-desktop",
    "test:e2e:mobile": "playwright test --project e2e-mobile",
    "test:visual": "playwright test --project visual",
    "test:visual:update": "playwright test --project visual --update-snapshots",
    "test:full": "npm run test:unit && npm run test:api && npm run test:e2e && npm run test:visual"
  },
  "dependencies": {
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
